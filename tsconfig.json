{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "types": ["node"],  // Adds Node.js types
    "moduleResolution": "node",
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
